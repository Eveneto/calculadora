{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Calculadora",
			"type": "shell",
			"command": "mkdir -p build && cd build && cmake .. && make -j$(nproc)",
			"group": "build",
			"problemMatcher": [
				"$gcc"
			],
			"isBackground": false,
			"detail": "Compila a calculadora Qt"
		},
		{
			"label": "Run Calculadora",
			"type": "shell",
			"command": "./calculadora",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"group": "test",
			"dependsOn": "Build Calculadora",
			"detail": "Executa a calculadora Qt"
		},
		{
			"label": "Clean Build",
			"type": "shell",
			"command": "rm -rf build",
			"group": "build",
			"detail": "Remove arquivos de build"
		}
	]
}